<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
   android:background="@drawable/bks2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:id="@+id/bkname"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:background="@color/white"
        android:textColor="@color/booksie_blue"
        android:textSize="20dp"
        android:id="@+id/authnm"
        android:textStyle="italic"
        android:layout_below="@+id/bkname"
        android:layout_alignLeft="@+id/bkname"
        android:layout_alignStart="@+id/bkname"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amazon:"
        android:background="@color/white"
        android:textColor="@color/black"
        android:id="@+id/amznLink"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/authnm"
        android:layout_alignLeft="@+id/authnm"
        android:layout_alignStart="@+id/authnm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoodReads:"
        android:background="@color/white"
        android:id="@+id/gdrLink"
        android:layout_marginTop="141dp"
        android:textColor="@color/black"
        android:layout_below="@+id/amznLink"
        android:layout_alignLeft="@+id/amznLink"
        android:layout_alignStart="@+id/amznLink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/amlink"
        android:autoLink="web"
        android:textColor="@color/dark_red"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/amznLink"
        android:layout_alignTop="@+id/amznLink"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/gdlink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/gdlink"
        android:textColor="@color/dark_red"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:autoLink="web"
        android:layout_toRightOf="@+id/gdrLink"
        android:layout_alignTop="@+id/gdrLink"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:src="@drawable/logouts"
        android:onClick="logoutClicked"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvoteb"
        android:src="@drawable/votes"
        android:background="@color/white"
        android:layout_alignBottom="@+id/authnm"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/votes"
        android:onClick="upvoteClicked"
        android:layout_above="@+id/upvoteb"
        android:layout_alignRight="@+id/upvoteb"
        android:layout_alignEnd="@+id/upvoteb" />

</RelativeLayout>